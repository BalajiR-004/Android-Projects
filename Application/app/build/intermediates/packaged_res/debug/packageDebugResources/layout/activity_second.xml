<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:background="#fff">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X_Player Score : 0"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/tv1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y_Player Score : 0"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:id="@+id/tv2"/>
    <Button
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="reset"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:id="@+id/b1"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape1"/>
    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#fff"
        android:layout_centerInParent="true"
        android:id="@+id/five"/>
    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#fff"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/five"
        android:layout_marginBottom="20dp"
        android:id="@+id/two"/>
    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#fff"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/five"
        android:layout_marginTop="20dp"
        android:id="@+id/eight"/>
    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#fff"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/five"
        android:layout_marginRight="20dp"
        android:id="@+id/four"/>
    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#fff"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/five"
        android:layout_marginLeft="20dp"
        android:id="@+id/six"/>
    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#fff"
        android:layout_toLeftOf="@+id/two"
        android:layout_above="@+id/four"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/one"/>
    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#fff"
        android:layout_toRightOf="@+id/two"
        android:layout_above="@+id/six"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/three"/>
    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#fff"
        android:layout_toLeftOf="@+id/eight"
        android:layout_below="@+id/four"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/seven"/>
    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#fff"
        android:layout_toRightOf="@+id/eight"
        android:layout_below="@+id/six"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/nine"/>
    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="4dp"
        android:background="#000"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/five"
        android:layout_marginBottom="8dp"/>
    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="4dp"
        android:background="#000"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/five"
        android:layout_margin="8dp"/>
    <RelativeLayout
        android:layout_width="4dp"
        android:layout_height="280dp"
        android:background="#000"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/five"
        android:layout_margin="8dp"/>
    <RelativeLayout
        android:layout_width="4dp"
        android:layout_height="280dp"
        android:background="#000"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/five"
        android:layout_margin="8dp"/>
</RelativeLayout>

























